<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUpActivity">

    <ImageView
            android:id="@+id/logo_login_activity2"
            android:layout_width="150dp"
            android:layout_height="182.5dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:contentDescription="@string/logo_descriptions"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.477"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/najdima_logo_1" />

    <EditText
            android:layout_width="256dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_username" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:drawableStart="@drawable/ic_username"
            android:hint="@string/user_name" android:singleLine="true" android:typeface="normal"
            android:textAlignment="viewStart" android:backgroundTint="@color/gradientCenterColor"
            android:paddingLeft="8dp" android:paddingRight="8dp" android:drawablePadding="8dp"
            android:autofillHints=""
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.496"
            android:drawableEnd="@drawable/ic_required" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/logo_login_activity2" android:fontFamily="@font/open_sans"/>

    <EditText
            android:layout_width="256dp"
            android:layout_height="48dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:paddingLeft="8dp" android:paddingRight="8dp" android:drawablePadding="8dp"
            android:id="@+id/et_email"
            android:textAlignment="viewStart" android:backgroundTint="@color/gradientCenterColor"
            android:visibility="visible" android:hint="@string/email" android:drawableStart="@drawable/ic_email"
            android:autofillHints=""
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496" android:drawableEnd="@drawable/ic_required"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/et_username"
            android:fontFamily="@font/open_sans"/>

    <EditText
            android:id="@+id/et_password"
            android:layout_width="256dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/gradientCenterColor"
            android:drawableStart="@drawable/ic_password"
            android:drawableEnd="@drawable/ic_required"
            android:drawablePadding="8dp"
            android:ems="10"
            android:fontFamily="@font/open_sans"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:padding="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_email" />

    <EditText
            android:layout_width="256dp"
            android:layout_height="48dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/et_repeat_password"
            android:backgroundTint="@color/gradientCenterColor"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:drawablePadding="8dp" android:paddingLeft="8dp"
            android:paddingRight="8dp" android:hint="@string/repeat_password"
            android:padding="8dp"
            app:layout_constraintHorizontal_bias="0.496"
            android:drawableEnd="@drawable/ic_required" android:drawableStart="@drawable/ic_password"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/et_password"
            android:fontFamily="@font/open_sans"/>

    <EditText
            android:layout_width="256dp"
            android:layout_height="48dp"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/et_phone"
            android:backgroundTint="@color/gradientCenterColor"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:drawablePadding="8dp" android:paddingLeft="8dp"
            android:paddingRight="8dp" android:hint="@string/phone"
            android:padding="8dp"
            android:drawableStart="@drawable/ic_phone_number"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/et_repeat_password"
            android:fontFamily="@font/open_sans" app:layout_constraintHorizontal_bias="0.503"/>

    <CheckBox
            android:text="@string/conditions"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:id="@+id/chb_conditions" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/et_phone" android:checked="false"
            android:textColor="@color/et_color" android:backgroundTint="@color/et_color"
            android:buttonTint="@color/gradientCenterColor" android:fontFamily="@font/open_sans"
            app:layout_constraintHorizontal_bias="0.503" android:layout_marginTop="8dp"/>
    <Button
            android:text="@string/btn_sign_up"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_sign_up"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            tools:visibility="visible"
            android:fontFamily="@font/righteous"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:background="@drawable/login_button"
            app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/chb_conditions"/>
    <TextView
            android:text="@string/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_author3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/righteous"
            android:textColor="@color/gradientCenterColor" android:layout_marginBottom="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>