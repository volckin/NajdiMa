    <ImageView
            android:layout_width="256dp"
            android:layout_height="306dp" app:srcCompat="@drawable/najdima_logo_1"
            android:id="@+id/logo_login_activity"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/logo_descriptions"
            android:layout_marginTop="88dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.476"/>
