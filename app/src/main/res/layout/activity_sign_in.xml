            android:id="@+id/et_email2" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:drawableStart="@drawable/ic_username"
            android:hint="@string/user_name" android:singleLine="true" android:typeface="normal"
